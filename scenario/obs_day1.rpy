



label obs_day1_main:
    pass

label obs_day1_start:
    $ Obs.Global("obs_after_load", False)
    $ Obs.Set.Day("День 1")
    $ Obs.Set.DayTime("day")
    $ Obs.Set.NewChapter("day1")
    $ Obs.Pause(1)
    $ Obs.Scene.Image("bg obs_ext_bus_light", expr="obs_defocusing")
    $ Obs.Master(obs_bg_zoom_rotate_e(zz=1.75, xx=0.85, yy=0.6))
    $ Obs.Show.Unblink()
    $ Obs.Play.Sound("obs_squeak")
    $ Obs.Play.Ambience("camp_entrance_day", 3)
    $ Obs.Pause(4.0)
    $ Obs.Show.Screens()



    $ Obs.AutoSave("Пробуждение в автобусе.")



    $ Obs.Say("Поистине яркий свет, сыпавший солнечные лучи мне в глаза, заставил меня окончательно очнуться.")
    $ Obs.Say("От столь резкой яркости красок я непроизвольно...")

    $ Obs.Show.Image("obs_ext_bus_light_hand", layer="mapoverlay", at=obs_bg_zoom_e2(0.8, 1.0, 2.0, 1.8, 1.1, 0.65, 0.65, 4.0, 3.0, 0.8))
    $ Obs.Pause(2.5)
    $ Obs.Show.Blink()

    $ Obs.Say("Прикрыл глаза рукой.")
    $ Obs.Say("th", "Чёрт... {w}почему здесь так светло?..")
    $ Obs.Say("th", "Да и где я вообще нахожусь?..")
    $ Obs.Show.Unblink()
    $ Obs.Show.Image("obs_ext_bus_light_hand", layer="mapoverlay", at=obs_bg_zoom_e(4.0, 0.8, 3.0, 0.0, 1.8, 0.65, 0.658))
    $ Obs.Say("Я вновь открыл глаза.")
    $ Obs.Say("И когда те более-менее привыкли к свету...")
    $ Obs.Show.Image("bg obs_ext_bus_light2", _with=dissolve2)
    $ Obs.Say("Смог разглядеть очертания каких-то... {w}сидений?")
    $ Obs.Say("Да и сам я, оказывается, сидел сейчас как раз на одном из них.")
    $ Obs.Play.Music("obs_autumn_song", 3)
    $ Obs.Say("Воспоминания постепенно начали возвращаться ко мне.")
    $ Obs.Say("th", "То есть как?.. {w}Это всё был лишь сон?..")
    $ Obs.Say("th", "Получается, мы с Михой так и не доехали до того самого леса?.. {w}А сам я до сих пор в том самом автобусе?..")
    $ Obs.Say("th", "Если же так, то почему, собственно, меня тогда не разбудил ни тот, ни сам водитель? {w}Вот это уже действительно странно...")
    $ Obs.Say("Я медленно встал со сидения.", sound="obs_walk_bus2", master=obs_bg_zoom_rotate_e2(1.75, 1.95, 2.0, 0.85, 0.5, 0.6, 0.55, 0, 25, 1.9, 2.0, 0.52, 0.47, 0))

    $ Obs.Hide.Unblink()
    $ Obs.Show.Image("bg obs_ext_bus_light3")
    $ Obs.Show.Effects("obs_c_dust_ever", alpha=0.6, _with=dissolve2)

    $ Obs.Say("И постепенно моему взору стала проявляться ещё более чёткая картинка.")
    $ Obs.Say("th", "Стоп! {w}Так ж это не тот автобус... {w}Салон значительно отличается от тогдашнего...")
    $ Obs.Say("th", "Да и... {w}почему он мне кажется таким знакомым?..")
    $ Obs.Say("В мыслях всё крутился какой-то образ, но никак не желал приходить на ум.")
    $ Obs.Say("От такой резкой и неожиданной смены обстановки, голова наотрез отказывалась нормально соображать.")
    $ Obs.Say("Но так или иначе, в данной ситуации меня волновало лишь одно: {w}где именно я оказался.")
    $ Obs.Stop.Music(5)
    $ Obs.Say("Поэтому я решил попытаться вспомнить хотя бы тот сон (или не сон?) с лесом в надежде, что хотя бы это поможет мне разобраться в текущей ситуации.")
    $ Obs.Say("th", "Что ж там было такое-то?..")

    $ Obs.Play.Music("obs_cant_not", 3)
    $ Obs.Hide.Effects("obs_c_dust_ever")
    $ Obs.Hide.Image("obs_ext_bus_light_hand", layer="mapoverlay")
    $ Obs.Scene.Image("black", _with=obs_mosaic_slow)
    $ Obs.Show.Image("prologue_dream",  layer="mapoverlay", _with=obs_dissolve6)
    $ Obs.Play.Ambience("obs_bizzard_outside", 3)
    $ Obs.Set.Clothes("msk", "jacket gray")
    $ Obs.Pause(3)
    $ Obs.Set.DayTime("prologue")
    $ Obs.Scene.Image("bg obs_forest", expr="obs_grayscale")
    $ Obs.Show.Image("msk smile", at=obs_i42)
    $ Obs.Show.Image("obs_snow right", at=obs_alpha(0.7), zorder=5, _with=obs_dissolve8)

    $ Obs.Say("th", "...Мы шли вдоль деревьев...")

    $ Obs.Scene.Image("black", _with=obs_dissolve8)
    $ Obs.Scene.Image("bg obs_forest3", expr="obs_grayscale")
    $ Obs.Show.Image("obs_forest_layer 1", expr="obs_grayscale")
    $ Obs.Show.Image("msk smile", at=obs_normal)
    $ Obs.Show.Image("obs_snow right", at=obs_alpha(0.7), zorder=5, _with=obs_dissolve8)

    $ Obs.Say("th", "...По какой-то тропинке...")

    $ Obs.Scene.Image("black", _with=obs_dissolve8)
    $ Obs.Scene.Image("bg obs_forest4")
    $ Obs.Show.Image("obs_forest4_house 2")
    $ Obs.Show.Image("obs_forest4_layer")
    $ Obs.Show.Image("msk serious", at=obs_i31)
    $ Obs.Show.Image("obs_snow right", at=obs_alpha(0.3), zorder=5, _with=obs_dissolve8)

    $ Obs.Say("th", "...Увидели странное здание...")

    $ Obs.Scene.Image("black", _with=obs_dissolve8)
    $ Obs.Scene.Image("bg obs_forest_house")
    $ Obs.Show.Image("obs_forest_house_layer")
    $ Obs.Show.Image("obs_forest_house_layer2")
    $ Obs.Show.Image("obs_forest_house_layer3")
    $ Obs.Show.Image("obs_forest_house_layer4")
    $ Obs.Show.Image("obs_forest_house_layer5")
    $ Obs.Master(obs_bg_zoom_e(1.5, 2.0, 1.0, 0.35, 0.5, -1.7, -1.0))
    $ Obs.Show.Image("bg obs_forest_house3", at=obs_xpos_ease(0.42, 0.5, 1.0))
    $ Obs.Show.Image("obs_snow right", at=obs_alpha(0.3), zorder=5, _with=obs_dissolve8)

    $ Obs.Say("th", "...Ну а после, когда мы подошли ближе к нему, и я посмотрел в окно...")

    $ Obs.Stop.Music(2)
    $ Obs.Hide.Image("obs_snow right",  layer="mapoverlay")
    $ Obs.Scene.Image("black", sound="obs_flashback", _with=flash)

    $ Obs.Say("th", "...Пустота...")
    $ Obs.Say("th", "Здесь мои воспоминания и обрываются...")
    $ Obs.Say("th", "Но я точно уверен, что в конце что-то да произошло...")
    $ Obs.Say("th", "Что-то{el} очень важное...")
    $ Obs.Say("th", "Но что?..")

    $ Obs.Pause(2)
    $ Obs.Play.Ambience("camp_entrance_day", 3)
    $ Obs.Set.DayTime("day")
    $ Obs.Hide.Image("prologue_dream", layer="mapoverlay")
    $ Obs.Show.Image("bg obs_ext_bus_light3")
    $ Obs.Show.Effects("obs_c_dust_ever", alpha=0.6)
    $ Obs.Master(obs_bg_zoom_rotate_e(zz=1.9, xx=0.52, yy=0.47), _with=obs_mosaic_alt)
    $ Obs.Set.Clothes("msk", "shirt")

    $ Obs.Say("th", "...")
    $ Obs.Say("th", "...Что же это могло быть?..")
    $ Obs.Say("art", "М-да... {w}полнейшая дичь происходит...")
    $ Obs.Say("msk", "Ага, <бля>, и не говори...")
    $ Obs.Play.Sound2("suspence_bang")
    $ Obs.Say("art", "!!!", _with=vpunch)
    $ Obs.Show.Image("msk sad", at=obs_bg_zoom_rotate_e(zz=0.6, xx=-0.28, yy=0.95, rr=-3))
    $ Obs.Say("art", "Миха? {w}Надо же, неужели, и ты здесь?", sound="obs_swipe", master=obs_bg_zoom_rotate_e(1.9, 1.9, 0.5, 0.52, 0.12, 0.47, 0.47))
    $ Obs.Say("Удивился я столь неожиданному появлению своего товарища.")
    $ Obs.Play.Music("obs_sunrise", 2)
    $ Obs.Say("msk", "smile", "Хе, а я никуда и не пропадал.")
    $ Obs.Say("art", "Чего сразу-то меня не окликнул? {w}Я-то думал, что вообще один тут очутился.")
    $ Obs.Say("msk", "evilsmile", "Просто не хотел отвлекать тебя от изучения здешних видов. {w}Ты целые пару минут осматривал этот чёртов салон.")
    $ Obs.Show.Image("msk grin")
    $ Obs.Say("art", "Ты знаешь, где мы?")
    $ Obs.Say("msk", "happy2", "В автобусе.")
    $ Obs.Show.Image("msk smile")
    $ Obs.Say("С ухмылкой произнёс Миха.")
    $ Obs.Show.Image("msk serious")
    $ Obs.Say("art", "Да ясное дело, что в автобусе, эйнштейн!")
    $ Obs.Say("Не выдержимаю я.")
    $ Obs.Say("art", "Вопрос в том {-} где именно этот автобус.")
    $ Obs.Say("msk", "smile", "Без малейшего понятия.")
    $ Obs.Say("art", "Чего радуешься-то тогда так? {w}Мы с тобой оказались не пойми где, а ты сидишь и лыбишься не пойми чему.")
    $ Obs.Say("msk", "evilsmile", "Ха-ха, а чё грустить-то? {w}Ты ж меня знаешь. {w}Я не прочь от любого приключения!")
    $ Obs.Say("С той же ухмылкой торжественно воскликнул Миха.")
    $ Obs.Say("th", "Блин, авантюрист недоделанный... {w}Даже если наступит конец света {-} уверен, улыбка так и не сойдёт с его лица.")
    $ Obs.Say("th", "И ещё {-} мне кажется, или он немного помолодел? Странно.")
    $ Obs.Say("art", "Ладно, ты вот что скажи мне... {w}Мы ведь с тобой доезжали до леса того, о котором ты говорил ещё во время звонка того твоего?")
    $ Obs.Say("msk", "grin", "Доезжали, канеш. {w}А ты чё, совсем, что ль, память уже растерял?")
    $ Obs.Say("msk", "evilsmile", "Бум-бум, моя память в отпуске?", voice="obs_msk_laugh")
    $ Obs.Say("Захохотал тот.")
    $ Obs.Say("art", "Нет, просто хотел убедиться, что мне это не приснилось.")
    $ Obs.Show.Image("msk smile")
    $ Obs.Say("art", "Кстати, слушай... {w}ты ведь запомнил, чем весь этот поход закончился?")
    $ Obs.Say("msk", "serious", "Честно говоря, нет. {w}Помню ток, что под самый конец я тебя подсадил, чтоб ты позырил в окно то, а дальше... {w}дальше провал... {w}Больше ничего и не помню...")
    $ Obs.Say("art", "Эх, понятно... {w}У меня и у самого провал на том моменте.")
    $ Obs.Say("msk", "grin", "Ну и пофиг, кароч. {w}Главное, что мы как-то выбрались оттуда. {w}Или нас кто-то спас и притащил сюда.")
    $ Obs.Say("msk", "evilsmile", "А девку ту поищем ещё в следующий раз! {w}Она от нас никуда не убежит, <ёпта>!")
    $ Obs.Show.Image("msk serious")
    $ Obs.Say("art", "Какое, блин, \"поищем\", Миха?! {w}Мы ведь даже не знаем, где оказались! {w}Думай хотя бы иногда головой-то...", sound="obs_hit", _with=vpunch)
    $ Obs.Say("art", "И если всё-таки нас и правда кто-то притащил сюда {-} то почему именно в автобус, по-твоему, а не, допустим, в дом какой-нибудь или ещё куда?")
    $ Obs.Say("msk", "sad", "А мне-то откуда знать, <бля>?")
    $ Obs.Say("msk", "serious", "Я просто предположил.")
    $ Obs.Say("art", "Предположил, блин, он...")
    $ Obs.Say("Начал злиться я.")
    $ Obs.Say("msk", "sad", "Лан, харэ уже дурью маяться. {w}Давай уже разбираться, что ль.", at=obs_bg_zoom_rotate_e(0.6, 0.6, 1.0, -0.28, -0.28, 0.95, 0.5, -3, 0), trans=None)
    $ Obs.Say("art", "Я об этом и говорю.")
    $ Obs.Say("msk", "smile", "Ага, говорит он... {w}Пальто-то хотя бы сними своё, а то совсем от жары помрёшь.")
    $ Obs.Say("art", "От чего?..")
    $ Obs.Say("Только сейчас я обратил внимание на то, что в салоне автобуса было ужасно душно.", _with=vpunch)
    $ Obs.Say("art", "Стоп, но как?..")
    $ Obs.Say("msk", "serious", "Далековато же, походу, нас увезли... {w}Только щас вот подумал...")
    $ Obs.Say("th", "Автобус... {w}жара... {w}Не может же это значить, что...")
    $ Obs.Say("Постепенно картина начинала, казалось бы, проясняться передо мной.")
    $ Obs.Say("th", "Нет... {w}должно быть какое-то логическое объяснение...")
    $ Obs.Say("msk", "evilsmile", "Чё, так и будешь в пальто этом стоять и думу-думать не пойми о чём?")
    $ Obs.Say("msk", "smile", "Я вон уже снял куртку свою и кое-как запихнул ту в рюкзак. {w}В руке его пока что понесу.")
    $ Obs.Show.Image("msk smile")
    $ Obs.Say("art", "А... {w}да... {w}сейчас его сниму.")

    $ Obs.Hide.Screens()
    $ Obs.Master(obs_bg_zoom_rotate_e3(1.9, 1.9, 3.0, 0.12, 0.5, 0.47, 0.47, 0, 0, 1.9, 1.0, 0.55, 0.47, -5, 1.9, 1.0, 0.45, 0.47, 5), sound="obs_walk", end_sound=2.8)
    $ Obs.Pause(5)
    $ Obs.Master(obs_bg_zoom_rotate_e3(1.9, 1.9, 1.0, 0.45, 0.5, 0.47, 0.47, 5, 0, 1.9, 0.5, 0.5, 0.52, 0, 1.9, 0.5, 0.5, 0.47, 0))
    $ Obs.Play.Sound("obs_making")
    $ Obs.Pause(2)
    $ Obs.Stop.Music(5)
    $ Obs.Show.Screens()

    $ Obs.Say("Я снял наконец это душное пальто.")
    $ Obs.Say("И сложил его под мышку.", sound="obs_curtains", end_sound=2.8, master=obs_bg_zoom_rotate_e2(1.9, 1.9, 0.5, 0.5, 0.52, 0.47, 0.47, 0, 5, 1.9, 0.5, 0.5, 0.47, 0))
    $ Obs.Say("msk", "smile", "Кстать, чел, а куда эта твоя фирменная борода бомжовская делась? {w}Она сама куда-то ускакала, или ты её каким-то макаром умудрился в автобусе сбрить?", at=obs_bg_zoom_rotate_e(0.6, 0.6, 1.0, -0.28, 0.2), sound="obs_walk2")
    $ Obs.Play.Sound("obs_clapping", end=1.0)
    $ Obs.With.Shake(1.0, 40)
    $ Obs.Say("Я тут же ощупал своё лицо.")
    $ Obs.Stop.Ambience(3)
    $ Obs.Play.Music("obs_depression", 2)
    $ Obs.Say("th", "Да ладно... {w}Реально пропала... {w}Остались лишь небольшие усы да бородка козья, которые, кажется, были у меня в 17 лет...", show_effect="vignette")
    $ Obs.Say("th", "Неужели мы реально попали в...")
    $ Obs.Say("msk", "evilsmile", "Чё с таким удивлённым лицом стоишь-то, будто привидение увидел? {w}Хочешь сказать, это не ты себя побрил?")
    $ Obs.Say("Усмехнулся, смотря на моё шокированное лицо, Миха.")
    $ Obs.Say("art", "Просто у меня тут одна теория появилась... {w}но она настолько безумная...")
    $ Obs.Say("msk", "happy", "Хе, люблю безумные теории. {w}Валяй, говори.")
    $ Obs.Say("art", "Миха{el} а ты веришь в попадание в игры?")
    $ Obs.Say("msk", "smile", "И в какую мы игру, по-твоему, тогда попали?")
    $ Obs.Say("msk", "evilsmile", "Ой, дай угадаю! {w}В игру под названием \"Я переиграл в аниме-игры и теперь вижу вокруг себя аниме-тянок\"?", voice="obs_msk_laugh")
    $ Obs.Say("Засмеялся он.")
    $ Obs.Show.Image("msk serious")
    $ Obs.Say("art", "Да, согласен, мне тоже кажется это бредом.")
    $ Obs.Say("art", "Но только вот кто тогда меня побрил, пока я был во сне? {w}И зачем? {w}И почему здесь на полу тогда нигде не осталось волос? {w}Кто же это мог сделать? {w}Зачем? {w}Для чего?")
    $ Obs.Say("msk", "sad", "Ля, слишком много вопросов...")
    $ Obs.Say("msk", "serious", "Но бред какой-то реально происходит, здесь соглашусь. {w}Давай сперва на улицу, что ль, выйдем, а там уже разберёмся в происходящем.")
    $ Obs.Stop.Music(5)
    $ Obs.Play.Ambience("camp_entrance_day", 3)
    $ Obs.Say("art", "Да... {w}Ты прав... {w}Пошли.", hide_effect="vignette")
    $ Obs.Say("И с этими словами мы направились наружу.")

    $ Obs.Hide.Screens()
    $ Obs.Master(obs_bg_zoom_rotate_e(1.9, 3.0, 3.0, 0.5, 0.55, 0.47, 0.42), sound="obs_walk", end_sound=2.8)
    $ Obs.Pause(2)
    $ Obs.Play.Ambience("camp_center_day", 2)
    $ Obs.Hide.Effects("obs_c_dust_ever")
    $ Obs.Scene.Image("bg ext_camp_entrance_day", at=obs_bus_exit_anim)
    $ Obs.Show.Effects("obs_l_light", 0.7, sound="obs_walk_bus", _with=flash2)
    $ Obs.Pause(3)
    $ Obs.Master(obs_bg_zoom_e(1.0, 3.0, 0.5, 0.48, 0.48, 0.0, 0.0), sound="scary_sting")
    $ Obs.Show.Screens()

    $ Obs.Say("th", "!!!")
    $ Obs.Play.Music("obs_the_nothing")
    $ Obs.Say("th", "Надпись \"Совёнок\"?..")
    $ Obs.Say("th", "Статуи... ", extend="save", sound="obs_swipe_fast", master=obs_bg_zoom_e(3.0, 2.5, 0.5, 0.48, 1.0, 0.0, 0.3))
    $ Obs.Say("th", "пионеров?..", extend=True, sound="obs_swipe_fast", master=obs_bg_zoom_e(2.5, 2.5, 0.5, 1.0, 0.0, 0.3, 0.3))
    $ Obs.Say("th", "Ворота пионерлагеря?..", sound="obs_swipe_fast", master=obs_bg_zoom_e(2.5, 1.5, 0.5, 0.0, 0.42, 0.3, 0.8))
    $ Obs.Say("th", "Мне это снится?..", sound="obs_swipe_fast", master=obs_bg_zoom_e(1.5, 1.05, 0.5, 0.42, 0.37, 0.8, 0.8))

    $ Obs.Show.Image("bg ext_bus", sound="obs_swipe_fast", tag="bg2", at=obs_bg_pos_e(1.5, 1.5, 0.5, -0.135, -0.3, -0.5, -0.5, 0.0, 1.0))

    $ Obs.Say("Я обернулся в сторону Михи.")

    $ Obs.Show.Image("bg ext_bus", sound="obs_swipe_fast", tag="bg2", at=obs_bg_pos_e(1.5, 2.5, 0.5, -0.3, -1.1, -0.5, -0.6))
    $ Obs.Show.Image("msk sad", at=obs_tf22)
    $ Obs.Master(obs_bg_zoom_e(1.05, 1.1, 0.5, 0.7, 0.7, 0.3, 0.3))

    $ Obs.Say("msk", "Ё{w=0.05}ё{w=0.05}ё{w=0.05}ё{w=0.05}ё{w=0.05}ё{w=0.05}ё{w=0.05}ёкарный баба{w=0.05}а{w=0.05}а{w=0.05}а{w=0.05}ай...")
    $ Obs.Say("Дрожащим голосом медленно проговорил тот, выронив свой рюкзак с руки.", sound="obs_fall", _with=vpunch)
    $ Obs.Say("msk", "upset", "Какого... {w}здесь творится?")
    $ Obs.Say("art", "Ты тоже это видишь?..")
    $ Obs.Say("msk", "sad", "Ага...")

    $ Obs.Show.Image("bg ext_bus", sound="obs_swipe_fast", tag="bg2", at=obs_alpha_ease(1.0, 0.0, 0.5))
    $ Obs.Show.Image("msk sad", at=obs_alpha_ease(1.0, 0.0, 0.5))
    $ Obs.Master(obs_bg_zoom_e(1.1, 1.1, 0.5, 0.7, 0.0, 0.3, 0.3))

    $ Obs.Say("art", "Значит, я не сошёл с ума.")
    $ Obs.Say("art", "Знаешь, откуда эти ворота?")

    $ Obs.Master(obs_bg_zoom_e(1.1, 1.1, 0.5, 0.0, 1.0, 0.3, 0.3), sound="obs_swipe_fast")
